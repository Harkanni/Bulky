@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Create Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Product.Author" class="form-control border-0 shadow" />
                    <label asp-for="Product.Author" class="ms-2"></label>
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Product.Title" class="form-control border-0 shadow" />
                    <label asp-for="Product.Title" class="ms-2"></label>
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                    <label asp-for="Product.ListPrice" class="ms-2"></label>
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price" class="ms-3"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.Description" class="form-control border-0 shadow" />
                    <label asp-for="Product.Description" class="ms-3"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                    <label asp-for="Product.ISBN" class="ms-3"></label>
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price50" class="ms-3"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price100" class="ms-3"></label>
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>

                <div class="form-floating py-3 mb-3">
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--select category--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-3"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="form-floating py-3 mb-3">
                    <input asp-for="Product.ImageUrl" class="form-control border-0 shadow" />
                    <label asp-for="Product.ImageUrl" class="ms-3"></label>
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6">
                        <button class="p-3 btn btn-primary form-control" type="submit">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-area="Customer" asp-controller="Product" asp-action="index" class="p-3 btn btn-outline-primary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}